{
  "version": 2,
  "functions": {
    "api/webhook.php": {
      "runtime": "vercel-php@0.6.0"
    },
    "api/set-webhook.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    {
      "src": "/webhook",
      "dest": "/api/webhook.php"
    },
    {
      "src": "/set-webhook",
      "dest": "/api/set-webhook.php"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "DB_HOST": "@db_host",
    "DB_USERNAME": "@db_username", 
    "DB_PASSWORD": "@db_password",
    "DB_NAME": "@db_name",
    "API_KEY": "@api_key",
    "MERCHANT_CODE": "@merchant_code",
    "BOT_TOKEN": "@bot_token",
    "ADMIN_CHAT_ID": "@admin_chat_id",
    "WELCOME_IMAGE": "@welcome_image"
  }
}
